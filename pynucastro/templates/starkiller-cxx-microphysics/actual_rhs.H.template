    // Compute screened rates

    for (int i = 1; i <= NrateReaclib; ++i) {
        rate_eval.screened_rates(i) = rate_eval.unscreened_rates(i_rate, i) *
                                      rate_eval. unscreened_rates(i_scor, i);
    }
}

