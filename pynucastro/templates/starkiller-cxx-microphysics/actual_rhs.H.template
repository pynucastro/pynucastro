        reaclib_evaluate(pstate, state.T, i, rate, drate_dt);
        rate_eval.unscreened_rates(i_rate, i) = rate;
        rate_eval.unscreened_rates(i_drate_dt, i) = drate_dt;
    }

    // Evaluate screening factors

    Real scor, dscor_dt, dscor_dd;
